<section class="orders-show">

  <header class="page-header">
    <h1>Order Summary</h1>
    <em><p>Order #<%= @order.id %></p></em>
    <h2 class="alert alert-success">Thank you for your purchase, <%= @order.email%>!</h2>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Cost</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <%= render 'show', product: item.product, quantity: item.quantity.to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            Final Total:
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-success' %>